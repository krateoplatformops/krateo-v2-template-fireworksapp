{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema",
  "required": [
    "argocd"
  ],
  "properties": {
    "argocd": {
      "type": "object",
      "title": "ArgoCD parameters section",
      "required": [
        "namespace",
        "application"
      ],
      "properties": {
        "namespace": {
          "type": [
            "string"
          ],
          "title": "Namespace where ArgoCD has been installed",
          "default": "argocd"
        },
        "application": {
          "type": "object",
          "title": "ArgoCD application configuration section",
          "required": [
            "project",
            "source",
            "destination",
            "syncPolicy"
          ],
          "properties": {
            "project": {
              "type": [
                "string"
              ],
              "title": "ArgoCD Application project",
              "default": "default"
            },
            "source": {
              "type": "object",
              "title": "ArgoCD Application source parameters section",
              "required": [
                "path"
              ],
              "properties": {
                "path": {
                  "type": [
                    "string"
                  ],
                  "title": "ArgoCD Application source path inside the repository created by the template",
                  "default": "chart/"
                }
              }
            },
            "destination": {
              "type": "object",
              "title": "ArgoCD Application destination parameters section",
              "required": [
                "server",
                "namespace"
              ],
              "properties": {
                "server": {
                  "type": [
                    "string"
                  ],
                  "title": "ArgoCD Application target cluster",
                  "default": "https://kubernetes.default.svc"
                },
                "namespace": {
                  "type": [
                    "string"
                  ],
                  "title": "ArgoCD Application target namespace",
                  "default": "fireworks-app"
                }
              }
            },
            "syncPolicy": {
              "type": "object",
              "title": "ArgoCD Application synchronization policies section",
              "required": [
                "automated"
              ],
              "properties": {
                "automated": {
                  "type": "object",
                  "title": "ArgoCD Application synchronization policies section",
                  "required": [],
                  "properties": {
                    "prune": {
                      "type": [
                        "string",
                        "boolean",
                        "number",
                        "object",
                        "array"
                      ],
                      "default": "true"
                    },
                    "selfHeal": {
                      "type": [
                        "string",
                        "boolean",
                        "number",
                        "object",
                        "array"
                      ],
                      "default": "true"
                    }
                  }
                },
                "syncOptions": {
                  "type": [
                    "string",
                    "boolean",
                    "number",
                    "object",
                    "array"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "git": {
      "type": "object",
      "required": [],
      "properties": {
        "deploymentServiceUrl": {
          "type": [
            "string",
            "boolean",
            "number",
            "object",
            "array"
          ],
          "default": "http://deployment-service.krateo-system.svc"
        },
        "unsupportedCapabilities": {
          "type": [
            "string",
            "boolean",
            "number",
            "object",
            "array"
          ],
          "default": "true"
        },
        "deletionPolicy": {
          "type": [
            "string",
            "boolean",
            "number",
            "object",
            "array"
          ],
          "default": "Orphan"
        },
        "insecure": {
          "type": [
            "string",
            "boolean",
            "number",
            "object",
            "array"
          ],
          "default": "true"
        },
        "fromRepo": {
          "type": "object",
          "required": [],
          "properties": {
            "url": {
              "type": [
                "string",
                "boolean",
                "number",
                "object",
                "array"
              ],
              "default": "https://github.com/krateoplatformops/krateo-v2-template-fireworksapp"
            },
            "branch": {
              "type": [
                "string",
                "boolean",
                "number",
                "object",
                "array"
              ],
              "default": "3-implement-the-chart"
            },
            "path": {
              "type": [
                "string",
                "boolean",
                "number",
                "object",
                "array"
              ],
              "default": "skeleton/"
            },
            "credentials": {
              "type": "object",
              "required": [],
              "properties": {
                "authMethod": {
                  "type": [
                    "string",
                    "boolean",
                    "number",
                    "object",
                    "array"
                  ],
                  "default": "basic"
                },
                "secretRef": {
                  "type": "object",
                  "required": [],
                  "properties": {
                    "namespace": {
                      "type": [
                        "string",
                        "boolean",
                        "number",
                        "object",
                        "array"
                      ],
                      "default": "krateo-system"
                    },
                    "name": {
                      "type": [
                        "string",
                        "boolean",
                        "number",
                        "object",
                        "array"
                      ],
                      "default": "github-repo-creds"
                    },
                    "key": {
                      "type": [
                        "string",
                        "boolean",
                        "number",
                        "object",
                        "array"
                      ],
                      "default": "token"
                    }
                  }
                }
              }
            }
          }
        },
        "toRepo": {
          "type": "object",
          "required": [],
          "properties": {
            "scmUrl": {
              "type": [
                "string",
                "boolean",
                "number",
                "object",
                "array"
              ],
              "default": "https://github.com"
            },
            "org": {
              "type": [
                "string",
                "boolean",
                "number",
                "object",
                "array"
              ],
              "default": "krateoplatformops"
            },
            "name": {
              "type": [
                "string",
                "boolean",
                "number",
                "object",
                "array"
              ],
              "default": "fireworksapp-test-v2"
            },
            "branch": {
              "type": [
                "string",
                "boolean",
                "number",
                "object",
                "array"
              ],
              "default": "main"
            },
            "path": {
              "type": [
                "string",
                "boolean",
                "number",
                "object",
                "array"
              ],
              "default": "/"
            },
            "credentials": {
              "type": "object",
              "required": [],
              "properties": {
                "authMethod": {
                  "type": [
                    "string",
                    "boolean",
                    "number",
                    "object",
                    "array"
                  ],
                  "default": "basic"
                },
                "secretRef": {
                  "type": "object",
                  "required": [],
                  "properties": {
                    "namespace": {
                      "type": [
                        "string",
                        "boolean",
                        "number",
                        "object",
                        "array"
                      ],
                      "default": "krateo-system"
                    },
                    "name": {
                      "type": [
                        "string",
                        "boolean",
                        "number",
                        "object",
                        "array"
                      ],
                      "default": "github-repo-creds"
                    },
                    "key": {
                      "type": [
                        "string",
                        "boolean",
                        "number",
                        "object",
                        "array"
                      ],
                      "default": "token"
                    }
                  }
                }
              }
            },
            "apiUrl": {
              "type": [
                "string",
                "boolean",
                "number",
                "object",
                "array"
              ],
              "default": "https://api.github.com"
            },
            "private": {
              "type": [
                "string",
                "boolean",
                "number",
                "object",
                "array"
              ],
              "default": "false"
            },
            "initialize": {
              "type": [
                "string",
                "boolean",
                "number",
                "object",
                "array"
              ],
              "default": "true"
            },
            "deletionPolicy": {
              "type": [
                "string",
                "boolean",
                "number",
                "object",
                "array"
              ],
              "default": "Delete"
            }
          }
        },
        "replaceValues": {
          "type": "object",
          "required": [],
          "properties": {
            "host": {
              "type": [
                "string",
                "boolean",
                "number",
                "object",
                "array"
              ],
              "default": "localhost"
            },
            "organizationName": {
              "type": [
                "string",
                "boolean",
                "number",
                "object",
                "array"
              ],
              "default": "myorganization"
            },
            "schema": {
              "type": [
                "string",
                "boolean",
                "number",
                "object",
                "array"
              ],
              "default": "myschema"
            },
            "pippo": {
              "type": [
                "string",
                "boolean",
                "number",
                "object",
                "array"
              ],
              "default": "true"
            },
            "pluto": {
              "type": [
                "string",
                "boolean",
                "number",
                "object",
                "array"
              ],
              "default": "123123"
            }
          }
        }
      }
    }
  }
}
